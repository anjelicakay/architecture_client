<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_tag "/client/buildings", method: :post do %>
      <div class="form-group">
        <label for="InputName">Name</label>
        <input type="text" name="name" class="form-control" id="InputName" placeholder="ex. Willis Tower">
      </div>

      <div class="form-group">
        <label for="InputAddress">Address</label>
        <input type="text" name="address" class="form-control" id="InputAddress" placeholder="ex. 233 S Wacker Dr, Chicago, IL 60606">
      </div>

      <div class="form-group">
        <label for="InputHeight">Height</label>
        <input type="text" name="height" class="form-control" id="InputHeight" placeholder="ex. 1453">
      </div>

      <div class="form-group">
        <label for="InputConstructionDate">Construction Date</label>
        <input type="text" name="construction_date" class="form-control" id="InputConstructionDate" placeholder="ex. 1970">
      </div>

      <div class="form-group">
        <label for="InputArchitect">Architect</label>
        <input type="text" name="architect" class="form-control" id="InputArchitect" placeholder="ex. Raymond Hood, John Mead Howells, John Vinci">
      </div>
      
      <input type="submit" class="btn btn-gold" value="Create Building" />
    <% end %>
  </div>
</div>
